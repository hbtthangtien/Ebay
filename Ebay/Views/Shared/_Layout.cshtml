@* /Views/Shared/_Layout.cshtml *@
@{
    bool hideChrome = (bool?)ViewData["HideChrome"] ?? false;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ebay</title>

    <!-- Bootstrap & site -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- Giao diện homepage eBay clone -->
    <link rel="stylesheet" href="~/css/Homepage.css" asp-append-version="true" />
    <link rel="icon" href="https://pages.ebay.com/favicon.ico" />
</head>
<body>

    @if (!hideChrome)
    {
        @await Html.PartialAsync("_Navbar")
    }
    <!-- ===== PAGE CONTENT ===== -->
    <main role="main">
        @RenderBody()
    </main>

    @if (!hideChrome)
    {
        @await Html.PartialAsync("_Footer")
    }
    <!-- ===== SCRIPTS ===== -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Script riêng cho trang clone -->
    <script src="~/js/Homepage.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>