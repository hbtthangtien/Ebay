@model BoxChatViewModel
@{
    // ID người dùng hiện tại
    var userId = ViewBag.UserId as int? ?? 0;
}

<!-- Root holder mang data‑* để JS ngoài đọc & khởi tạo SignalR -->
<div id="chat-box"
     data-product="@Model.ProductId"
     data-user="@userId"
     data-seller="@Model.SellerId"
     data-peer="@Model.ReceiverId"
>

    <!-- ==== Header ==== -->
    <div class="chat-box-header">
        <img class="product-img" src="@Model.ProductImage" alt="Product" />
        <div class="product-info">
            <div class="product-title">@Model.ProductTitle</div>
            <div class="seller-name">Người bán: @Model.SellerName</div>
        </div>
        <button class="buy-btn">Mua ngay</button>
    </div>

    <!-- ==== Messages ==== -->
    <div class="chat-messages" id="chat-messages">
        @foreach (var m in Model.Messages)
        {
            var isMe = m.SenderId == userId;
            <div class="msg-row @(isMe ? "msg-me" : "msg-seller")">
                <div class="msg-bubble">
                    @m.DecryptMessage
                    <div class="msg-time">@m.Timestamp.ToString("HH:mm")</div>
                </div>
            </div>
        }
    </div>

    <!-- ==== Input ==== -->
    <div class="chat-input-row">
        <input id="chat-input" class="chat-input" type="text" placeholder="Nhập tin nhắn..." autocomplete="off" />
        <button type="button" id="send-btn" class="send-btn">Gửi</button>
    </div>
</div>

<style>
    /* (Giữ nguyên toàn bộ CSS hiển thị, không có JS inline) */
    body {
        font-family: 'Segoe UI',Arial,sans-serif;
        background: #f5f6fa;
        margin: 0;
        padding: 0;
    }

    .chat-box-header {
        display: flex;
        align-items: center;
        padding: 14px 16px;
        border-bottom: 1px solid #eee;
        background: #fff;
    }

    .product-img {
        width: 50px;
        height: 50px;
        border-radius: 8px;
        margin-right: 12px;
        object-fit: cover;
    }

    .product-info {
        flex: 1;
    }

    .product-title {
        font-weight: bold;
        font-size: 17px;
    }

    .seller-name {
        font-size: 13px;
        color: #888;
    }

    .buy-btn {
        background: #F8E900;
        color: #333;
        border: none;
        padding: 8px 18px;
        font-weight: bold;
        border-radius: 6px;
        cursor: pointer;
        transition: background .2s;
    }

        .buy-btn:hover {
            background: #ffe600;
        }

    .chat-messages {
        background: #f6f6f6;
        padding: 20px 12px;
        height: 350px;
        overflow-y: auto;
        display: flex;
        flex-direction: column;
        gap: 8px;
    }

    .msg-row {
        display: flex;
    }

    .msg-me {
        justify-content: flex-end;
    }

    .msg-seller {
        justify-content: flex-start;
    }

    .msg-bubble {
        max-width: 60%;
        padding: 12px 18px;
        border-radius: 20px;
        background: #2c85d2;
        color: #fff;
        font-size: 15px;
        line-height: 1.5;
        box-shadow: 0 2px 8px rgba(0,0,0,.03);
        word-break: break-word;
    }

    .msg-seller .msg-bubble {
        background: #eee;
        color: #333;
        border-bottom-left-radius: 6px;
        border-bottom-right-radius: 20px;
    }

    .msg-me .msg-bubble {
        background: #0074D9;
        color: #fff;
        border-bottom-left-radius: 20px;
        border-bottom-right-radius: 6px;
    }

    .msg-time {
        font-size: 11px;
        color: #000;
        margin-top: 4px;
        text-align: right;
    }

    .chat-input-row {
        display: flex;
        align-items: center;
        border-top: 1px solid #eee;
        padding: 10px 14px;
        background: #fff;
    }

    .chat-input {
        flex: 1;
        border: none;
        border-radius: 16px;
        padding: 10px 18px;
        font-size: 15px;
        background: #f2f2f2;
        margin-right: 10px;
        outline: none;
    }

    .send-btn {
        background: #0074D9;
        color: #fff;
        border: none;
        padding: 9px 26px;
        border-radius: 16px;
        font-weight: bold;
        font-size: 15px;
        cursor: pointer;
        transition: background .2s;
    }

        .send-btn:hover {
            background: #005fa3;
        }
</style>
